<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<fragment
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mezmeraiz.kingbird.MapsActivity" />

    <TextView
        android:text="22 км"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/textView_distance"
        android:layout_marginRight="16dp"
        android:layout_alignLeft="@+id/fab_google"
        android:layout_alignStart="@+id/fab_google"
        android:gravity="center"
        android:textColor="#000" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:fabSize="normal"
        app:srcCompat="@drawable/google_maps"
        android:layout_above="@+id/textView_distance"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/fab_google"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:alpha="0.9" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:fabSize="normal"
        app:srcCompat="@drawable/near"
        android:layout_below="@+id/textView_distance"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/fab_near"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:alpha="0.9" />

</RelativeLayout>